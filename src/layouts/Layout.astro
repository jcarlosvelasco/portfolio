---
import "@fontsource-variable/onest"
import Background from "../components/Background.astro";

const description = "jcarlosvelasco's Portfolio - See my projects, blog posts, and more!";
---
<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description}/>
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <meta name="generator" content={Astro.generator} />
    <title>jcarlosvelasco's Portfolio | Sofware Engineer</title>
  </head>
  <body>
    <Background />
    <slot />
  </body>
</html>

<style is:global>
  :root {
    --accent: 136, 58, 234;
    --accent-light: 224, 204, 250;
    --accent-dark: 49, 10, 101;
    --accent-gradient: linear-gradient(45deg, rgb(var(--accent)), rgb(var(--accent-light)) 30%, white 60%);
  }
  html, body {
    height: 100vh;
    margin: 0;
  }
  html {
    font-family: Onest Variable, system-ui, sans-serif;
    background: #13151a;
  }
  code {
    font-family: Onest Variable, Menlo, Monaco, Lucida Console, Liberation Mono, DejaVu Sans Mono, Bitstream Vera Sans Mono, Courier New, monospace;
  }
</style>