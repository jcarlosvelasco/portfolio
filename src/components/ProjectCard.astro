---
import ProjectTecnology from "./ProjectTecnology.astro"
import { Image } from 'astro:assets';

import github from '../../src/assets/github.svg';
import astro from '../../src/assets/astro.svg';

const {projectName, githubLink, tecnologies, frameworkImage, frameworkLink, frameworkAlt} = Astro.props

const images: Record<string, ImageMetadata> = {
    "astro.svg": astro
};
---

<style>
    .project-card {
        @apply sm:w-[calc(50%-16px)] w-full;
    }
</style>

<div class="flex flex-col bg-black bg-opacity-20 rounded-md border-stone-500 project-card p-4 border gap-4 hover:bg-slate-400 dark:hover:bg-zinc-800 transition duration-300">
    <div class="flex flex-row justify-between items-center">
        <p class="font-semibold text-xl">{projectName}</p>
        <a href={githubLink}>
            <Image src={github} alt="Github" class="w-5"/>
        </a>
    </div>
    <div class="flex flex-row gap-4 content-center">
        <a href={frameworkLink}>
            {images[frameworkImage] && <Image src={images[frameworkImage]} class="w-5" alt={frameworkAlt} />}
        </a>
        <div class="sm:flex flex-row gap-2 content-center hidden">
        {
            tecnologies.map((tecnology: string) => (
                <ProjectTecnology tecnologyName={tecnology}/>
            ))
        }
        </div>
    </div>
</div>