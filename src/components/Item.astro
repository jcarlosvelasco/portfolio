---
const { subtitle, title, imageSource, time, altTime} = Astro.props;
---

<div class="flex flex-row w-full justify-between items-center">
    <div class="flex flex-row gap-5 items-center">
        <div class= "dark:bg-white bg-slate-200 p-4 rounded-lg h-16 md:h-20 aspect-[16/9] flex flex-col items-center justify-center">
            <img src={imageSource} class="w-28"/>
        </div>
        <div>
            <p class="text-xl font-bold line-clamp-1">{title}</p>
            <p class="md:block hidden text-base">{subtitle}</p>
            <div class="flex flex-row gap-2 text-base line-clamp-1 md:hidden">
                <p class="line-clamp-1">{subtitle} {altTime}</p>
            </div>
        </div>
    </div>
    
    <div class="hidden md:block">{time}</div>
</div>