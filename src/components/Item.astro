---
import { Image } from "astro:assets";
const { subtitle, title, imageSource, time, altTime, imageAlt} = Astro.props;
import indra from "../../src/assets/indra.svg";
import usal from "../../src/assets/usal.svg";
import nttdata from "../../src/assets/nttdata.svg";
import unir from "../../src/assets/unir.svg";
import upsa from "../../src/assets/upsa.svg";
import type { ImageMetadata } from "astro";

const images: Record<string, ImageMetadata> = {
    "indra.svg": indra,
    "usal.svg": usal,
    "nttdata.svg": nttdata,
    "unir.svg": unir,
    "upsa.svg": upsa
};
---

<div class="flex flex-row w-full justify-between items-center">
    <div class="flex flex-row gap-5 items-center">
        <div class= "dark:bg-white bg-black bg-opacity-5 p-4 rounded-lg h-16 md:h-20 aspect-[16/9] flex flex-col items-center justify-center">
            {images[imageSource] && <Image src={images[imageSource]} class="w-28" alt={imageAlt} />}
        </div>
        <div>
            <p class="text-xl font-bold line-clamp-1">{title}</p>
            <p class="md:block hidden text-base">{subtitle}</p>
            <div class="flex flex-row gap-2 text-base line-clamp-1 md:hidden">
                <p class="line-clamp-1">{subtitle} {altTime}</p>
            </div>
        </div>
    </div>
    
    <div class="hidden md:block">{time}</div>
</div>