---
const { jobTitle, companyTitle, imageSource, time} = Astro.props;
---

<div class="flex flex-row text-white w-full justify-between items-center">
    <div class="flex flex-row gap-5">
        <img src={imageSource} class="w-28"/>
        <div class="flex flex-col gap-1">
            <p class="text-xl font-bold">{companyTitle}</p>
            <p class="text-base">{jobTitle}</p>
        </div>
    </div>
    
    <div>{time}</div>
</div>