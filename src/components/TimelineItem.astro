---
const { subtitle, title, imageSource, time, altTime, imageAlt} = Astro.props;
import { Image } from "astro:assets";
import indra from "../../src/assets/indra.svg";
import usal from "../../src/assets/usal.svg";
import nttdata from "../../src/assets/nttdata.svg";
import unir from "../../src/assets/unir.svg";
import upsa from "../../src/assets/upsa.svg";
import type { ImageMetadata } from "astro";

const images: Record<string, ImageMetadata> = {
    "indra.svg": indra,
    "usal.svg": usal,
    "nttdata.svg": nttdata,
    "unir.svg": unir,
    "upsa.svg": upsa
};
---

<div class="flex flex-row gap-4 text-sm relative">
    <div class= "dark:bg-white bg-black bg-opacity-5 p-4 rounded-lg h-16 md:h-20 aspect-[16/9] sm:flex flex-col items-center justify-center hidden">
        {images[imageSource] && <Image loading={'eager'} src={images[imageSource]} class="w-28" alt={imageAlt} />}
    </div>
    <div class="flex flex-row justify-between w-full items-center">
        <div class="flex flex-col">
            <div class="aspect-square w-3 bg-gray-900 rounded-full absolute left-0 translate-x-[-29.5px] translate-y-[-50%] z-10 top-1/2 dark:bg-gray-50" />           
            <div class="font-semibold text-lg sm:text-xl line-clamp-1">{title}</div>
            <div class="text-gray-500 dark:text-gray-400 text-sm sm:hidden">{`${subtitle} ${altTime}`}</div>
            <div class="text-gray-500 dark:text-gray-400 text-base sm:block hidden">{subtitle}</div>
        </div>
        <div class="text-sm line-clamp-1 hidden sm:block">{time}</div>
    </div>
</div>